<div class="border-l-4 border-blue-500 pl-4 mb-4" id="comment-<%= comment.id %>">
  <div class="flex justify-between items-start mb-2">
    <div class="flex items-center space-x-2">
      <svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"></path>
      </svg>
      <span class="font-medium text-blue-700"><%= comment.author %></span>
      <span class="text-sm text-gray-500">commented</span>
    </div>
    <span class="text-sm text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</span>
  </div>
  
  <div class="text-gray-700">
    <p><%= simple_format(comment.content) %></p>
  </div>
</div>
