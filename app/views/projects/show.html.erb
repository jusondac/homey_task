                <% end %>
              </div>
              <span class="text-sm text-gray-500"><%= time_ago_in_words(item.created_at) %> ago</span>
            </div>
            <div class="text-gray-700">
              <% if item.conversation_type == 'comment' %>
                <p><%= simple_format(item.content) %></p>
              <% else %>
                <p><%= item.description %></p>
              <% end %>
            </div>
          </div>
